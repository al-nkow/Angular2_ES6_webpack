.input("[style.height]"="title ? height + 20 : (height || 'auto')")
    input(
        "[attr.name]"="name",
        "[attr.type]"="type",
        "[ngModel]"="value",
        "(ngModelChange)"="onValueChange($event)",
        "[attr.required]"="required ? true : null",
        "[attr.placeholder]"="placeholder",
        "(blur)"="onBlur($event)",
        "[ngClass]"="{'ng-invalid': showError && errors}",
        "[attr.autocomplete]"="autocomplete",
        "[attr.form]"="form",
        "(focus)"="onFocus()",
        "[style.height]"="height"
    )

    .label-row
        label
            span("[innerHtml]"='title')
            span("*ngIf"="required", class="required") *
        label.errors("*ngIf"="showError && errors")
            //span("*ngIf"="errors.required")=__("bt-input-required")

            span("*ngIf"="!errors.required && errors.minlength")
                //span #{__("bt-input-length")} {{minlength}} #{__("bt-input-length-end")}

            //span("*ngIf"="!errors.required && !errors.minlength && errors.pattern")=__("bt-input-invalid-email")

    .clear-btn("*ngIf"="clear && value", "(click)"="onClear()", "[style.height]"="height", "[style.top]"="title ? 20 : 0")
